{
  "manifest_version": 3,
  "name": "Prompt Expander",
  "version": "1.3",
  "description": "Expands short prompts into more detailed ones.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "./logos/LLM_Prompt_Expander_Logo_16x16.png",
    "48": "./logos/LLM_Prompt_Expander_Logo_48x48.png",
    "128": "./logos/LLM_Prompt_Expander_Logo_128x128.png"
  }
}